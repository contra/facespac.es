extend layout

block content
  #wrapper
    .header
      a#logo(href='/') /
      p #{channel}
      span.user-count ?
      #menu-button â‰¡
        ul(id='menu-list')
          li
            a#unmute(href='javascript:;') Unmute
          li
            a#interval(href='javascript:;') Interval

    #chat-container
      ul(id='chat-list')
      .end

    div(id='channel', data-channel='#{channel}')
    div#interval-container
      p interval!
      label(for='interval-input') enter seconds:
        input(id='interval-input', type='text', maxlength='3')
      small.tip click the countdown timer to cancel interval

  #footer
    #video-wrapper
    a#countdown(href='javascript:;')
    form(method='post', id='composer-form')
      .message-content
        input(name='message', id='composer-message', class='input', maxlength='100', autocomplete='off', placeholder='Send a message')
        input(type='hidden', name='_csrf', value='#{csrf}')
        #composer-blocker.hidden
    #counter 100

